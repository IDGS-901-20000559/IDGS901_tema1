@model IDGS901_tema1.Models.Triangulo

@{
    ViewBag.Title = "Calculos";
}

<h2>Calcular Triangulo</h2>
<hr class="border border-3 border-primary" />
<div class="row">
    <div class="col-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="text-uppercase">Primer lado</label>
                <div class="row">
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.a1, new { htmlAttributes = new { @class = "form-control", placeholder = "Coordenada en x" } })
                        @Html.ValidationMessageFor(model => model.a1, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.b1, new { htmlAttributes = new { @class = "form-control", placeholder = "Coordenada en y" } })
                        @Html.ValidationMessageFor(model => model.b1, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <hr class="border border-3 border-dark" />
            <div class="form-group">
                <label class="text-uppercase">Segundo lado</label>
                <div class="row">
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.a2, new { htmlAttributes = new { @class = "form-control", placeholder = "Coordenada en x" } })
                        @Html.ValidationMessageFor(model => model.a2, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.b2, new { htmlAttributes = new { @class = "form-control", placeholder = "Coordenada en y" } })
                        @Html.ValidationMessageFor(model => model.b2, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <hr class="border border-3 border-dark" />

            <div class="form-group">
                <label class="text-uppercase">Tercer lado</label>
                <div class="row">
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.a3, new { htmlAttributes = new { @class = "form-control", placeholder = "Coordenada en x" } })
                        @Html.ValidationMessageFor(model => model.a3, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.b3, new { htmlAttributes = new { @class = "form-control", placeholder = "Coordenada en y"} })
                        @Html.ValidationMessageFor(model => model.b3, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <br />
            <center>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Calcular" class="btn btn-success" />
                    </div>
                </div>
            </center>
        </div>
        }
    </div>
    <div class="col-6">
        <div></div>
        @ViewBag.resultado

    </div>
</div>
